{
  "compilerOptions": {
    "target": "es6", // or "es5" if you need to support older browsers
    "module": "commonjs", // or "esnext" if using a modern module bundler for the web
    "lib": ["dom", "es6", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "react", // if using React
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
